# Uses coreutils instead of OS X native's
PATH="$(brew --prefix coreutils)/libexec/gnubin:$PATH"

# Go language paths
export GOROOT=$HOME/go
export GOARCH=amd64
export GOOS=darwin
export GOBIN=$HOME/gobin
export PATH=$PATH:$GOBIN
export GOINTRO=/Users/timosand/Documents/Code/Go/go-helsinki-spring-2010

# Scala paths
export SCALA_HOME=/opt/local/share/scala
export PATH=$PATH:$SCALA_HOME/bin

# Programming paths
export CABAL_HOME=$HOME/.cabal/bin
export PATH=$PATH:$CABAL_HOME
export MYSQL_PATH=/usr/local/mysql/bin
export PATH=$PATH:$MYSQL_PATH
export PYTHONSTARTUP=/Users/timosand/.pystartup
export PATH=$PATH:/usr/local/Cellar/python/2.7.1/bin
export RAILS_ENV=development
export POSTGRESQL_PATH=/opt/local/lib/postgresql84/bin
export PATH=$PATH:$POSTGRESQL_PATH
export PLAY_HOME=$HOME/play
export PATH=$PATH:$PLAY_HOME

# Other paths
export VIM=/usr/share/vim/vim73/
export PATH=/usr/local/bin:$PATH
export PATH=$PATH:$HOME/depot_tools
export PATH=$PATH:/bin:/sbin:/usr/bin:/usr/sbin:/usr/local/sbin
export PATH=/usr/local/share/python:/usr/local/Cellar/PyPi/2.6/bin:$PATH
export MANPATH=/opt/local/share/man:/user/local/man:$MANPATH
export INFO=/usr/local/share/info:$INFO

[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm"  # This loads RVM into a shell session.

# Homebrew fix
export HOMEBREW_TEMP="/usr/local/tmp"

# ls aliases
alias ls='gls $LS_OPTIONS -hF'
alias la='gls $LS_OPTIONS -lAhF'
alias ll='gls $LS_OPTIONS -lhF'

# Mongo roydon aliases
alias mongo_rp='mongo ds031277.mongolab.com:31277/roydon_prod -u roydon -p 8eza5re3e8wEthuT'
alias mongo_rd='mongo ds029267.mongolab.com:29267/heroku_app2248510 -u roydon -p 6KCpfzrFExHTkdww'
